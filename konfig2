var mak_5=" ";
//function hexRep(number, width) { return (number+Math.pow(16, precision)).toString(16).slice(-width); }
function start()
{
document.getElementById("numer_ser").innerHTML=serial; //info_text;//+info_inputy;//+info_inputy2+info_inputy3+info_inputy4;
