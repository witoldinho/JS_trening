  {
    v[x].setAttribute("value",ip_add[x]);
        v[x+4].setAttribute("value",maska[x]);
             v[x+8].setAttribute("value",gw[x]);
    //console.log(x);
  }
  v[12].setAttribute("value",dmxUniverse);
   v[13].setAttribute("value",MAB);
    v[14].setAttribute("value",Break);
}
window.onload=start;

